{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('sites_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                <td>{{ site.name }}</td>
                <td>{{ site.address }}</td>
                <td>{{ site.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sites_show', { 'id': site.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sites_edit', { 'id': site.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sites_new') }}">Create a new site</a>
        </li>
    </ul>
{% endblock %}
