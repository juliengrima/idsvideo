{% extends 'base.html.twig' %}

{% block header %}

    <!-- Header -->
    <header id="header">
        <div class="content">
            <h1><a href="{{ path('videopage') }}"><img src="{{ asset('assets/images/local/logo.jpg') }}" class="image-logo"></a></h1>
            <ul class="actions">
                <li>
                    <a href="{{ path('videopage') }}" class="button icon fa-chevron-down scrolly">Voir les vidéos</a>
                </li>
                <li>
                    <a href="{{ path('documents_index') }}" class="button icon fa-chevron-down scrolly">Voir les documents</a>
                </li>
            </ul>
            <ul class="actions">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}" class="button icon fa-chevron-down scrolly">Déconnexion</a>
                    </li>
                {% endif %}

            </ul>
        </div>
    </header>

{% endblock %}

{% block footer %}

    <footer id="footer">
        <ul class="icons">
            <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
        </ul>
        <p class="copyright">
            <span>© Untitled. Credits:</span> <a href="http://www.groupe-tse.fr/ecotoner/">Ecotoner</a></p>
    </footer>

{% endblock %}