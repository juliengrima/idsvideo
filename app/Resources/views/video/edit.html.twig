{% extends 'layout.html.twig' %}

{% block body %}
    <h1 class="align-center h1size">Editer une vidéo</h1>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="special-right">
            <table>
                <tr>
                    <td>Nom :</td>
                    <td>
                        {{ form_widget(edit_form.name) }}
                        {{ form_errors(edit_form.name) }}
                    </td>
                </tr>
                <tr>
                    <td>description :</td>
                    <td>
                        {{ form_widget(edit_form.comment) }}
                        {{ form_errors(edit_form.comment) }}
                    </td>
                </tr>
                <tr>
                    <td>Ajout du média :</td>
                    <td>
                        {{ form_widget(edit_form.media) }}
                        {{ form_errors(edit_form.media) }}
                    </td>
                </tr>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="special-right-buton">

            <ul class="ul-buton">
                <li>
                    <input type="submit" value="Create" />
                </li>

                {{ form_end(edit_form) }}

                <li>
                    {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        </div>

    </div>

{% endblock %}
